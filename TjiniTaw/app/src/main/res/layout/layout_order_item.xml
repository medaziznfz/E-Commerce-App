<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/order_nrml"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp">
        <ImageView
            android:id="@+id/img_order"
            android:layout_width="100dp"
            android:scaleType="fitXY"
            android:layout_height="100dp"
            android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_order_source"
                android:text="La Maison"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_order_number"
                android:text="Order number: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txt_order_date"
                android:text="Today at: 13:05:56 pm"
                android:textSize="13sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/txt_order_price"
                android:text="Order Price: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txt_order_statut"
                android:text="Status Commande: Placed "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textStyle="italic" />
            <TextView
                android:id="@+id/txt_order_shipper"
                android:text="3and: med aziz nefzi "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textStyle="italic"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/txt_order_fees"
                android:text="frais de livraison : en train de calculer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textStyle="italic"
                android:textColor="@color/orange"
                android:visibility="visible"/>






        </LinearLayout>







    </LinearLayout>
    <LinearLayout
        android:id="@+id/service_task"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginHorizontal="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:padding="0dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_service_source"
                android:text="La Maison"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_service_number"
                android:text="Order number: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txt_service_date"
                android:text="Today at: 13:05:56 pm"
                android:textSize="13sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/txt_service_service"
                android:text="n7eb nwasel aka el hkeya laka el blasa"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/txt_service_statut"
                android:text="Status Commande: Placed "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textStyle="italic" />
            <TextView
                android:id="@+id/txt_service_shipper"
                android:text="3and: med aziz nefzi "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textStyle="italic"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/txt_service_fees"
                android:text="frais de livraison : en train de calculer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textStyle="italic"
                android:textColor="@color/orange"
                android:visibility="visible"/>






        </LinearLayout>







    </LinearLayout>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:src="@drawable/swipe"
        tools:ignore="MissingConstraints"
        android:layout_gravity="end"/>

</androidx.cardview.widget.CardView>