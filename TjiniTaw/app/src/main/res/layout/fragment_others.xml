<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/poula"
    tools:context=".ui.Others.OthersFragment">

    <ScrollView
        android:layout_below="@id/aziz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="KIFECH N3AWNOUK"
            android:textColor="@color/orange"
            android:fontFamily="@font/sport"
            android:textSize="60sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_marginRight="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Ekteb ay service t7eb 3lih"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="15sp"
                android:textStyle="italic"
                android:layout_marginBottom="50dp"
                />
        </LinearLayout>
        <EditText
            android:padding="20dp"
            android:id="@+id/edt_task"
            android:hint="n7eb nwasel 9adhya l blasa foulaniya ...\nn7eb nbadel dabouza gaz ...\nkhodhra ma3dnous batata ...."
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sass"
            android:textColorHint="@color/dialog_header_color"
            android:textColor="@color/black"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/edt_address"
            android:hint="A3tina el address mte3ek"
            android:enabled="true"
            android:fontFamily="@font/sass"
            android:textColorHint="@color/dialog_header_color"
            android:textColor="@color/black"
            android:layout_marginHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >

        <TextView
            android:text="Win njik ?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="normal"
            android:fontFamily="@font/vibes"
            android:textColor="@color/goodgrey"/>

        <RadioGroup
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rdi_home_address"
                android:checked="true"
                android:text="Address e dar"
                android:textSize="18sp"
                android:fontFamily="@font/sass"
                android:textColor="@color/dialog_text_color"
                android:textStyle="italic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <RadioButton
                android:id="@+id/rdi_other_address"
                android:text="Address okhra"
                android:textSize="18sp"
                android:fontFamily="@font/sass"
                android:textColor="@color/dialog_text_color"
                android:textStyle="italic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <RadioButton
                android:id="@+id/rdi_ship_this_address"
                android:text="b este3mel e GPS"
                android:textSize="18sp"
                android:textColor="@color/dialog_text_color"
                android:textStyle="italic"
                android:layout_width="match_parent"
                android:fontFamily="@font/sass"
                android:layout_height="wrap_content"
                />


        </RadioGroup>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="3adi el command tao nkalmouk"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="15sp"
            android:textStyle="italic"
            />

        <Button
            android:id="@+id/btnupload"
            android:text="3adi el commande"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:fontFamily="@font/oumayma"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/rating"
            />


</LinearLayout>
    </ScrollView>





</LinearLayout>