<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout
    android:background="@drawable/aloo"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/baseIn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_admin"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:layout_gravity="center"
            app:strokeColor="@android:color/darker_gray"
            app:strokeWidth="2dp"
            app:shapeAppearanceOverlay="@style/Circular"
            android:src="@drawable/admin"
            android:scaleType="centerCrop"
            android:layout_marginTop="50dp"/>
        <TextView
            android:id="@+id/first_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="NOS CONTACT :"
            android:layout_marginLeft="8dp"
            android:textColor="@color/orange"
            android:textSize="35sp"
            android:fontFamily="@font/greenlondon" />
        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/rating"
            android:background="@color/rating"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="0dp"
                android:src="@drawable/phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telephone: "
                android:fontFamily="@font/sass"
                android:textStyle="bold|italic"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/sass"
                android:text="96 477 183 / 53 080 987"
                android:textSize="15sp"
                />


        </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/rating"
            android:background="@color/rating"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/email"
                android:padding="7dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: "
                android:textStyle="bold|italic"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/sass"
                />
            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="medaziznefzi1@gmail.com"
                android:textColor="@color/black"
                android:fontFamily="@font/sass"
                android:textSize="15sp"
                />


        </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/rating"
            android:background="@color/rating"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/facebook"
                android:padding="8dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facebook: "
                android:fontFamily="@font/sass"
                android:textStyle="bold|italic"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/facebook"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Tjini Taw"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/sass"
                />


        </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/rating"
            android:background="@color/rating"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/instagram"
                android:padding="8dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instagram: "
                android:textStyle="bold|italic"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/sass"
                />
            <TextView
                android:id="@+id/instagram"
                android:fontFamily="@font/sass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Tjini_Taw"
                android:textColor="@color/black"
                android:textSize="15sp"
                />


        </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/rating"
            android:background="@color/rating"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/address"
                android:padding="1dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address: "
                android:layout_gravity="center"
                android:textSize="16sp"
                android:fontFamily="@font/sass"
                android:textStyle="bold|italic"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sidi Abdallah Mateur "
                android:fontFamily="@font/sass"
                android:textColor="@color/black"
                android:textSize="15sp"
                />


        </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/rating"
            android:background="@color/rating"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/signiature"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>



    </LinearLayout>

</LinearLayout>