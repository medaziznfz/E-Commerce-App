<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reclamation des probleme"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="80sp"
        android:background="@color/dialog_header_color"
        android:fontFamily="@font/sport"/>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/poula"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <EditText
                android:layout_marginTop="70dp"
                android:padding="20dp"
                android:id="@+id/edt_report"
                android:hint="3andek ay mochkla ...\nt7eb nreclami aala ay probleme ...\n9adhitek jetek retard  ....\nma3ejbetekech 7aja fel application ..."
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sass"
                android:textColorHint="@color/dialog_header_color"
                android:textColor="@color/black"
                android:textSize="16sp"/>
            <EditText
                android:layout_marginTop="30dp"
                android:padding="20dp"
                android:id="@+id/edt_program"
                android:hint="khali commentaire lel programmeur ken t7eb ..."
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sass"
                android:textColorHint="@color/dialog_header_color"
                android:textColor="@color/black"
                android:textSize="16sp"/>


            <Button
                android:layout_marginTop="50dp"
                android:id="@+id/btnleave"
                android:text="3adi e reclamation"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:fontFamily="@font/oumayma"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                />
        </LinearLayout>






</LinearLayout>