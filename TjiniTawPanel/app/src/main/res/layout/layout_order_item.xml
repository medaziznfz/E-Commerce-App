<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/service_task_boss"
    android:backgroundTint="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/order_nrml"
        android:visibility="visible"
        android:padding="8dp"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="0"
        android:paddingEnd="16dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp">
            <ImageView
                android:id="@+id/img_food_image"
                android:layout_width="100dp"
                android:scaleType="fitXY"
                android:layout_height="100dp"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_order_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="La Maison"
                android:textColor="@color/rating"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_order_number"
                android:text="Number: 9999999"
                android:textColor="@color/holo_blue_light"
                android:textStyle="italic"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_time"
                android:text="Date : l'infini"
                android:textStyle="italic"
                android:textSize="13sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_name"
                android:text="Name: Med Aziz Nefzi"
                android:textStyle="italic"
                android:textSize="13sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_order_status"
                android:text="Order status : Placed"
                android:textStyle="italic"
                android:textSize="13sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_price"
                android:text="Totale Payment: 10"
                android:textStyle="italic"
                android:textSize="13sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_address"
                android:text="Address: 2414564116.654"
                android:textStyle="italic"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/txt_order_fees"
                android:text="frais de livraison : en train de calculer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textStyle="italic"
                android:textColor="@color/orange"
                android:visibility="visible"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_order_shipper"
                android:text="Comment: foula"
                android:textStyle="italic"
                android:textSize="13sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_comment"
                android:text="Comment: foula"
                android:textStyle="italic"
                android:textSize="13sp"/>







        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:id="@+id/service_task"
        android:visibility="gone"
        android:padding="8dp"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="0"
        android:paddingEnd="16dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_service_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="La Maison"
                android:textColor="@color/rating"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_service_number"
                android:text="Number: 9999999"
                android:textColor="@color/holo_blue_light"
                android:textStyle="italic"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_time_service"
                android:text="Date : l'infini"
                android:textStyle="italic"
                android:textSize="13sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_name_service"
                android:text="Name: Med Aziz Nefzi"
                android:textStyle="italic"
                android:textSize="13sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_service_status"
                android:text="Order status : Placed"
                android:textStyle="italic"
                android:textSize="13sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_address_service"
                android:text="Address: 2414564116.654"
                android:textStyle="italic"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/txt_service_fees"
                android:text="frais de livraison : en train de calculer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textStyle="italic"
                android:textColor="@color/orange"
                android:visibility="visible"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_service_shipper"
                android:text="Comment: foula"
                android:textStyle="italic"
                android:textSize="13sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_service_task"
                android:textColor="@color/black"
                android:text="nheb nemchy l 3alela"
                android:textStyle="bold"
                android:textSize="13sp"/>






        </LinearLayout>



    </LinearLayout>


</androidx.cardview.widget.CardView>